{% if page == 'admin/employees' or page == 'admin/employee' %}
    {% set action = '/admin/employees/' %}
{% elseif page == 'articles' or page == 'article' %}
    {% set action = '/articles/' %}
{% elseif page == 'clients' or page == 'client' %}
    {% set action = '/clients/' %}
{% elseif page == 'cuttings' or page == 'cutting' %}
    {% set action = '/cuttings/' %}
{% elseif page == 'materials' or page == 'material' %}
    {% set action = '/materials/' %}
{% elseif page == 'orders' or page == 'order' %}
    {% set action = '/orders/' %}
{% elseif page == 'pidbs' or page == 'pidb' %}
    {% set action = '/pidbs/' %}
{% elseif page == 'projects' or page == 'project' %}
    {% set action = '/projects/' %}
{% else %}
    {% set action = '/' %}
{% endif %}

<form action="{{ action }}search/"  method="get" class="d-none d-sm-inline-block form-inline mr-auto my-2 my-md-0 mw-100
navbar-search">
    <div class="input-group">
        <input type="text" class="form-control bg-light border-0" name="term" placeholder="Pretraga ..."
               aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-sm fa-search"></i>
            </button>
        </div>
    </div>
</form>
