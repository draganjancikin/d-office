<div class="card border-secondary mb-4">
    <div class="card-header p-2">
        <h6 class="m-0 font-weight-bold">Promena materijala</h6>
    </div>
    <div class="card-body p-2">

        <form action="/order/{{ order_data.getId() }}/material/{{ material_on_order_id }}/edit"
              class="form-horizontal" role="form" method="post">

            <div class="form-group row">

                <label for="article_id" class="col-sm-3 col-lg-2 col-form-label text-right">Izaberite materijal:</label>
                <div class="col-sm-9 col-lg-10">
                    <select name="material_id" id="material_id" class="form-control">
                        <option value="{{ material_data.getMaterial().getId() }}">
                          {{ material_data.getMaterial().getName() }}
                        </option>
                        {% for material_by_supplier in materials_by_supplier %}
                            <option value="{{ material_by_supplier.getMaterial().getId() }}"
                                    title="{{ material_by_supplier.getMaterial().getNote() }}">
                                {{ material_by_supplier.getMaterial().getName() }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>

        <div class="form-group row">
          <div class="col-sm-3 offset-sm-3 offset-lg-2">
            <button type="submit" class="btn btn-sm btn-success" title="Snimi izmenu materijala!">
              <i class="fas fa-save" title="Snimi izmenu"> </i> Snimi izmenu
            </button>
          </div>
        </div>

    </form>
  </div>
</div>
