<div class="col-lg-12 px-2" id="topMeni">
    <div class="card mb-2">
        <div class="card-body py-1 px-2">

            <a href="/orders/add" class="btn btn-sm btn-outline-secondary" title="Otvaranje nove narudžbenice!">
                <i class="fas fa-plus"> </i> <i class="fas fa-th"> </i>
            </a>

            {% if tools_menu.order %}
                {% if tools_menu.view %}
                    <a href="/order/{{ order_id }}/edit" class="btn btn-sm btn-outline-secondary mx-1"
                       title="Idi na stranicu za izmenu narudžbenice!">
                        <i class="fas fa-edit"> </i>
                    </a>
                {% endif %}
                {% if tools_menu.edit %}
                    <a href="/order/{{ order_id }}" class="btn btn-sm btn-outline-secondary mx-1"
                       title="Idi na stranicu za pregled narudžbenice!">
                        <i class="fas fa-eye"> </i>
                    </a>
                {% endif %}

                <!-- Button trigger modal za dodavanje materijala u narudzbenicu -->
                <button class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#addMaterial" title="Dodaj materijal!">
                    <i class="fa fa-plus"> </i> Materijal
                </button>

                <a href="/order/{{ order_id }}/print" title="PDF [new window]" target="_blank"
                   class="btn btn-sm btn-outline-secondary mr-1">
                    <i class="fa fa-print"> </i>
                </a>
            {% endif %}

        </div>
        <!-- End Card Body -->
    </div>
    <!-- End Card -->
</div>
<!-- /#topMeni -->
