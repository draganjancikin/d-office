{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    {% include 'admin/tools_menu.html.twig' %}

    <div class="card mb-4">
        <div class="card-header p-2">
            <h6 class="m-0 font-weight-bold text-primary">Pretraga zaposlenih</h6>
        </div>
        <div class="card-body p-2">
            <!-- Table with list of last client. -->
            <div class="table-responsive">
                <table class="dataTable table table-bordered table-hover" id="" width="100%" cellspacing="0">
                    <thead class="thead-light">
                    <tr>
                        <th>zaposleni</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for employee in employees %}
                        <tr>
                            <td>
                                <a href="/admin/employee/{{ employee.id }}">
                                    {{ employee.name }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- End of Card body. -->
    </div>
{% endblock %}
