<div class="col-lg-12 col-xl-10 px-2">
    <div class="card mb-4">
        <div class="card-header p-2">
            <h6 class="m-0 font-weight-bold text-primary">Zadnji upisani zaposleni</h6>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="" width="100%" cellspacing="0">
                    <thead class="thead-light"><tr><th>zaposleni</th></tr></thead>
                    <tbody>
                    {% for employee in last_employees %}
                        <tr>
                            <td>
                                <a href="/admin/employee/{{ employee.id }}">
                                    {{ employee.name }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
