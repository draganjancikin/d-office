<div class="table-responsive">
    <table class="table table-hover mb-0">
        <thead class="table-{{ document_style }}">
            <tr>
                <th class="px-1 text-center">#</th>
                <th class="px-1 text-center">naziv proizvoda</th>
                <th class="px-1 text-center">jed.<br />mere</th>
                <th class="px-1 text-center">kol.</th>
                <th class="px-1 text-center">cena</th>
                <th class="px-1 text-center">popust<br />%</th>
                <th class="px-1 text-center">poreska<br />osnovica</th>
                <th class="px-1 text-center">PDV<br />%</th>
                <th class="px-1 text-center">iznos PDV</th>
                <th class="px-1 text-center">ukupno</th>
                <th class="px-1 text-center"></th>
            </tr>
        </thead>
        <tbody>
            {% set count = 0 %}
            {% for document_article_data in accounting_document_articles_data %}
                {% set count = count + 1 %}
                <tr>
                    <td class="px-1 text-center">{{ count }}</td>
                    <td class="px-1">
                        <span class="text-decoration-underline">{{ document_article_data.article.name }}</span>
                        <br />
                        kom:
                        {{ document_article_data.article.pieces }}
                        <br />
                        {# AccountingDocument Article Properties. #}
                        {% if document_article_data.article.properties is defined and document_article_data.article.properties %}
                            {% for document_article_property in document_article_data.article.properties %}
                                {{ document_article_property.name }}:
                                {{ document_article_property.quantity|number_format(2, ',', '.') }} cm
                                <br />
                            {% endfor %}
                        {% endif %}
                        {{ document_article_data.article.note }}
                        <?php
                    </td>
                    <td class="px-1 input-box-45 text-center">{{ document_article_data.article.unit }}</td>
                    <td class="px-1 input-box-45">{{ document_article_data.article.quantity|number_format(2, ',', '.') }}</td>
                    <td class="px-1 input-box-65">{{ document_article_data.article.price|number_format(4, ',', '.')
                        }}</td>
                    <td class="px-1 input-box-45">{{ document_article_data.article.discount|number_format(2, ',', '.') }}</td>
                    <td class="px-1 input-box-65">{{ document_article_data.article.tax_base_rsd|number_format(2, ',', '.') }}</td>
                    <td class="px-1 input-box-45">{{ document_article_data.article.tax }}</td>
                    <td class="px-1 input-box-45">{{ document_article_data.article.tax_amount_rsd|number_format(2, ',', '.') }}</td>
                    <td class="px-1 input-box-65">{{ document_article_data.article.sub_total_rsd|number_format(2, ',', '.') }}</td>
                    <td class="px-1 input-box-115"> </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot class="table-{{ document_style }}">
            <tr>
                <td rowspan="6" colspan="3"></td>
                <td colspan="3">ukupno poreska osnovica</td>
                <td class="text-right px-1 input-box-65">{{ total_tax_base_rsd|number_format(2, ',', '.') }}</td>
                <td colspan="4"></td>
            </tr>
            <tr>
                <td colspan="5">ukupno iznos PDV-a</td>
                <td class="text-right px-1 input-box-65">{{ total_tax_amount_rsd|number_format(2, ',', '.') }}</td>
                <td colspan="2"></td>
            </tr>
            <tr>
                <td colspan="6">UKUPNO</td>
                <td class="text-right px-1 input-box-65">{{ total_rsd|number_format(2, ',', '.') }}</td>
                <td class="text-right input-box-115">(&#8364; {{ total_eur|number_format(4, ',', '.') }})</td>
            </tr>
            <tr>
                <td colspan="6">Avans</td>
                <td class="text-right px-1 input-box-115">{{ advance_payment_rsd|number_format(2, ',', '.') }}</td>
                <td class="text-right input-box-115">(&#8364; {{ advance_payment_eur|number_format(4, ',', '.') }})</td>
            </tr>
            {% if document.type.id == 2 %}
                <tr>
                    <td colspan="6">UplaÄ‡eno</td>
                    <td class="text-right px-1 input-box-115">{{ income_rsd|number_format(2, ',', '.') }}</td>
                    <td class="text-right input-box-115">(&#8364; {{ income_eur|number_format(4, ',', '.') }})</td>
                </tr>
            {% endif %}
            <tr>
                <td colspan="6"><strong>OSTALO ZA UPLATU</strong></td>
                <td class="text-right px-1 input-box-115"><strong>{{ remaining_rsd|number_format(2, ',', '.') }}</strong></td>
                <td class="text-right input-box-115">(&#8364; {{ remaining_eur|number_format(4, ',', '.') }})</td>
            </tr>
        </tfoot>
    </table>

    <table class="table table-{{ document_style }} mb-0">
        <tbody>
            <tr>
                <td width="100px">Naslov:</td>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <td>Klijent:</td>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <td>Arhivirano:</td>
                <td>{{ document.isArchived ? 'nije' : 'jeste' }}</td>
            </tr>
            <tr>
                <td>Napomena:</td>
                <td>{{ document.note|nl2br }}</td>
            </tr>
        </tbody>
    </table>
</div>
