<div class="card shadow-sm">
    <div class="card-header">
        Klijent info
    </div>
    <div class="card-body pt-2">
        <table class="table table-borderless mb-0">
            <tbody>
                <tr class="border-bottom">
                    <td class="p-2 w-25">ID</td>
                    <td class="p-2">{{ client.id }}</td>
                </tr>
                <tr class="border-bottom">
                    <td class="p-2">Vrsta klijenta</td>
                    <td class="p-2">{{ client.type.name }}</td>
                </tr>
                {% if client.type.id == 2 %}
                    <tr class="border-bottom">
                        <td class="p-2">PIB</td>
                        <td class="p-2">{{ client.lb == "" ? "-" : client.lb }}</td>
                    </tr>
                {% endif %}
                <tr class="border-bottom">
                    <td class="p-2">Naziv</td>
                    <td class="p-2">{{ client.name }} {% if client.nameNote %}({{ client.nameNote }}){% endif %}</td>
                </tr>
                <tr class="border-bottom">
                    <td class="p-2">Adresa</td>
                    <td class="p-2">
                        {% if client.street %}{{ client.street.name }}{% endif %} {{ client.homeNumber ?: '' }}
                        {{ client.city ? ', ' ~ client.city.name : '' }}
                        {{ client.country ? ', ' ~ client.country.name : '' }}
                        {% if client.addressNote %}({{ client.addressNote }}){% endif %}
                    </td>
                </tr>
                <tr class="border-bottom">
                    <td class="p-2">Dobavljač</td>
                    <td class="p-2">
                        {% if client.isSupplier %}
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-check2-square" viewBox="0 0 16 16">
                                    <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5z"/>
                                    <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0"/>
                                </svg>
                            </span>
                            <span>Jeste</span>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td class="p-2">Beleške</td>
                    <td class="p-2">
                        {{ client.note ?: '-' }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        Kontakti
    </div>
    <div class="card-body">
        <table class="table table-borderless mb-0">
            <tbody>
                {% for contact in client.contacts %}
                    <tr class="border-bottom">
                        <td class="p-2 w-25">{{ contact.type.name }}</td>
                        <td class="p-2">
                            {{ contact.body }} {% if  contact.note  %}({{ contact.note }}){% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="p-2" colspan="2">Nema unetih kontakata za ovog klijenta.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            <a href="/clients" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Povratak na klijente
            </a>
            <a href="/clients/{{ client.id }}/edit" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i> Izmeni klijenta
            </a>
        </div>
    </div>
</div>
