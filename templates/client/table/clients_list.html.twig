<div class="col-lg-12 col-xl-10 px-2">
    <div class="card mb-4">
        <div class="card-header p-2">
            <h6 class="m-0 font-weight-bold text-primary">Zadnji upisani klijenti</h6>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="" width="100%" cellspacing="0">
                    <thead class="thead-light"><tr><th>klijent</th><th>adresa</th></tr></thead>
                    <tbody>
                        {% for client in last_clients %}
                        <tr>
                            <td><a href="/client/{{ client.id }}">{{ client.name }}</a></td>
                            <td>
                                {{ client.street ? client.street.name : '' }} {{ client.home_number }}
                                {% if client.street and client.city %}, {% endif %}
                                {{ client.city ? client.city.name : '' }}
                                {% if client.city and client.country %}, {% endif %}
                                {{ client.country ? client.country.name : '' }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
