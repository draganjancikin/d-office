<table class="table table-bordered table-hover dataTable" id="" width="100%" cellspacing="0">
    <thead class="thead-light"><tr><th>klijent</th><th>adresa</th></tr></thead>
    <tbody>
        {% for client in clients %}
        <tr>
            <td><a href="/clients/{{ client.id }}">{{ client.name }}</a></td>
            <td>
                {{ client.street ? client.street.name : '' }} {{ client.homeNumber }}
                {% if client.street and client.city %}, {% endif %}
                {{ client.city ? client.city.name : '' }}
                {% if client.city and client.country %}, {% endif %}
                {{ client.country ? client.country.name : '' }}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
